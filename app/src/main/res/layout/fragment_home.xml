<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/squareRL"
        android:layout_width="match_parent"
        android:background="@color/bg_yellow_faint"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:textAlignment="center"
        android:textSize="@dimen/cell_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/diceImage"
        android:layout_width="@dimen/dice_width"
        android:layout_height="@dimen/dice_width"
        android:layout_marginTop="@dimen/space_normal"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/dice_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/squareRL"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>